<odoo>
    <data>


    <record model="ir.actions.act_window" id="unidad_ventas_list_action">
            <field name="name">Unidad de Venta</field>
            <field name="res_model">unidad_ventas.unidadventas</field>
            <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.ui.view" id="unidad_ventas_tree_view">
            <field name="name">Unidad de Venta</field>
            <field name="model">unidad_ventas.unidadventas</field>
            <field name="arch" type="xml">
                <tree string="Unidad Venta">
                    <field name="id"/>
                    <field name="name"/>
                </tree>
            </field>
    </record>

    <record model="ir.ui.view" id="unidad_ventas_form_view">
        <field name="name">Unidad de Venta</field>
        <field name="model">unidad_ventas.unidadventas</field>
        <field name="arch" type="xml">
          <form string="Formas de Pago">
                <sheet>
                    <group string="Unidad Venta">
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    </data>
</odoo>